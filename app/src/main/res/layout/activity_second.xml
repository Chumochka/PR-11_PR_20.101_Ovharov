        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_2"
            android:layout_marginLeft="12dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_3"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
    <Button
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"
        android:onClick="onClickStepsActivity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предложения"
        android:textSize="12dp"
        android:fontFamily="@font/inter"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="17dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_1s"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_2s"
            android:layout_marginLeft="12dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_3s"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
    <Button
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"/>
    <Button
        android:layout_width="101dp"
        android:layout_height="36dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/____12__2_5________2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подробная информация"
        android:fontFamily="@font/inter"
        android:textSize="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="18dp"/>
</LinearLayout>