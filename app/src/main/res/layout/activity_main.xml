<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#b6eef6">
    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/____12__2_5________2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#b6eef6"
        android:shadowColor="#b6eef6"
        android:drawableLeft="@drawable/free_icon_plus_sign_button_16057_1"
        android:fontFamily="@font/red_rose"
        android:text="Регистрация"
        android:textAllCaps="false"
        android:clickable="false"
        android:textSize="14dp"
        android:textFontWeight="700"
        android:layout_marginTop="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#b6eef6"
        android:shadowColor="#b6eef6"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/premium_icon_question_sign_5421645_1"
        android:fontFamily="@font/red_rose"
        android:text="Помощь"
        android:clickable="false"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:backgroundTint="#b6eef6"
        android:shadowColor="#b6eef6"
        android:drawableLeft="@drawable/free_icon_user_848043_1"
        android:fontFamily="@font/red_rose"
        android:textAllCaps="false"
        android:text="Вход"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Введите ваше имя"
        android:fontFamily="@font/red_rose"
        android:textSize="13dp"
        android:textColor="#868686"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:text="Введите ваше фамилию"
        android:fontFamily="@font/red_rose"
        android:textSize="13dp"
        android:textColor="#868686"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:text="Введите ваше контактный номер"
        android:fontFamily="@font/red_rose"
        android:textSize="13dp"
        android:textColor="#868686"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="34dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:fontFamily="@font/red_rose"
        android:textSize="14dp"
        android:clickable="true"
        android:textAllCaps="false"
        android:layout_marginTop="538dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClickStepsActivity"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Согласен(-а) с условиями использования  и политикой конфидециальности"
        android:fontFamily="@font/red_rose"
        android:textSize="12dp"
        android:textColor="#2E2D2D"
        android:layout_marginTop="647dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>